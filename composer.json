{
  "name": "thefrosty/custom-login",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Austin Passy",
      "email": "367897+thefrosty@users.noreply.github.com",
      "homepage": "https://austin.passy.co",
      "role": "Developer"
    }
  ],
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "roots/wordpress-core-installer": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "dwnload/wp-settings-api": "^3.5",
    "opis/closure": "^3.6",
    "pimple/pimple": "^3.5",
    "thefrosty/wp-utilities": "^2.7"
  },
  "require-dev": {
    "ext-simplexml": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^9",
    "roots/wordpress": "^5.9.1",
    "squizlabs/php_codesniffer": "^3.2",
    "wp-phpunit/wp-phpunit": "^5.9.1",
    "yoast/phpunit-polyfills": "^1.0.2"
  },
  "autoload": {
    "files": [
      "functions.php"
    ],
    "psr-4": {
      "TheFrosty\\CustomLogin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TheFrosty\\Tests\\CustomLogin\\": "tests/unit"
    }
  },
  "scripts": {
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "phpcs": [
      "bash ./vendor/thefrosty/wp-utilities/bin/phpcs.sh"
    ],
    "phpunit": [
      "./vendor/bin/phpunit --colors --verbose --coverage-html ./tests/results && php ./tests/clover-results.php ./tests/clover.xml 1"
    ],
    "eslint": [
      "npm run eslint"
    ],
    "tests": [
      "@phpcs",
      "@phpunit",
      "@eslint"
    ]
  }
}
